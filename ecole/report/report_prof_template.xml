<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_prof_doc">
          <t t-call="report.external_layout">
            <div class="page">
              <h2>Details du Professeur</h2>

              <h3>Nom du prof</h3>
               <p><span t-field="doc.name"/></p>

              <h3>Age</h3>
              <p> <span t-field="doc.age"/></p>
              <h3>Date de naissance</h3>
              <p> <span t-field="doc.date_naissance"/></p>
              <h3>Statut du prof</h3>
              <p>Retraité : <span t-field="doc.retraite"/></p>
              <h3>Section</h3>
              <p> <span t-field="doc.section_id"/></p>

              <h3>Liste des cours dont il est titulaire</h3>

             <table class="table table-condensed">
               <thead>
                 <tr>
                   <th>Nom</th>
                   <th class="text-right">Nombre d'heures</th>
                   <th class="text-right">Date de début</th>
                 </tr>
               </thead>
               <tbody>
             <t t-foreach="doc.cours_ids" t-as="el">
               <tr>
              <td><span t-field="el.name"/></td>
              <td class="text-right"><span t-field="el.nbHeures"/></td>
              <td class="text-right"><span t-field="el.date_debut"/></td>
            </tr>
            </t>
          </tbody>
        </table>
            </div>
          </t>
  </template>

  <template id="report_profs">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="ecole.report_prof_doc"/>
        </t>
    </t>
</template>

</odoo>
