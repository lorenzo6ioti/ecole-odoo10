<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_section_doc">
          <t t-call="report.external_layout">
            <div class="page">
              <h2>Details de la section</h2>

              <h3>Nom de la section</h3>
               <p><span t-field="doc.name"/></p>

              <h3>Liste des profs de la section</h3>
              <t t-foreach="doc.prof_ids" t-as="el">
               <p><span t-field="el.name"/></p>
             </t>


              <h3>Liste des élèves inscrits</h3>
              <t t-foreach="doc.eleve_ids" t-as="el">
               <p><span t-field="el.name"/></p>
             </t>
            </div>
          </t>
  </template>

  <template id="report_sections">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="ecole.report_section_doc"/>
        </t>
    </t>
</template>

</odoo>
